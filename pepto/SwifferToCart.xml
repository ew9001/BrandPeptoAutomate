 <!DOCTYPE suite SYSTEM "http://beust.com/testng/testng-1.0.dtd" >
 
<suite name="Add to Cart" verbose="1">
    <parameter name="param" value="Test"/>
    
    
    
    <test name="Add to Cart Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="brand.charmin.CharminAddCart"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    <test name="Add to Cart IE10">
        <parameter name="browser" value="browserIE10"/>
        <classes>
            <class name="brand.charmin.CharminAddCart"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    <test name="Add to Cart IE11">
        <parameter name="browser" value="browserIE11"/>
        <classes>
            <class name="brand.charmin.CharminAddCart"/>
        </classes>
 
        <groups>
            <run>
                <include name="create"/>
            </run>
        </groups>
    </test>
    
    
</suite>
